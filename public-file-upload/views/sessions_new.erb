<article id="sessions-new-page">
  <h2>Sign In</h2>

  <% if user.errors.any? %>
    <div class="form-errors">
      <h3>Uh oh! There were some errors.</h3>
      <ul class="error-messages">
        <% user.errors.full_messages.each do |error_msg| %>
          <li><%= error_msg %></li>
        <% end %>
      </ul
    </div>
  <% end %>

  <form id="sign-in-form" class="horizontal-form"
        method="POST" action="/sessions">

    <label for="username">Username</label>

    <input id="username" type="text" name="name"
           placeholder="sailorMoonie" value="<%= user.username %>">

    <label for="password">Password</label>

    <input id="user-password" type="password" name="password">

    <button type="submit">Sign In</button>
  </form>
</article>
